<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".PruebaLeerBD"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblEtiqueta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID_ususario"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtBasico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de Usuario"
        android:inputType="text" />

    <TextView
        android:id="@+id/lbDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripcion"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lbldescIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Introduce un id"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Validar"
        android:layout_marginTop="20dp"
    />
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continuar"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/buttonPasarPantalla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="volver hacia atrÃ¡s" />

</LinearLayout>